{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "target": "es6",
        "module": "commonjs",
        "noEmitOnError": false,
        "compileOnSave": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "!src/node_modules/**"
    ]
}
